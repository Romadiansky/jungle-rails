<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <!--<dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>-->
          <dt>Price</dt>
          <dd><%= humanized_money_with_symbol(@product.price) %></dd>
        </dl>

      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <%= button_to add_item_cart_path(product_id: @product.id), class: 'btn btn-primary' , method: :post do %>
          <%= fa_icon "shopping-cart", text: 'Add' %>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-12">
        <%= form_for @review, :url => product_reviews_path(@product), :class => 'form' do |form| %>

          <% if form.object.errors.any? %>
            <div class="alert alert-danger">
              <strong>The following errors prevented saving:</strong>
              <ul>
                <% form.object.errors.full_messages.each do |error| %>
                  <li><%= error %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="form-group">
            <%= form.label :rating %>
            <%= form.text_field :rating, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :description %>
            <%= form.text_field :description, class: 'form-control' %>
          </div>

          <%= form.submit 'Create Review', class: 'btn btn-primary btn-raised' %>

        <% end %>
      </div>
    </div>

    <% @product.reviews.latest_first.each do |review| %>
    <div class="row">
      <div class="col-12">
        <%= review.user.first_name %> gives this <%= review.rating %> stars and says:
        <p><%= review.description %></p>
      </div>
    </div>
    <% end %>

  </article>

</section>
